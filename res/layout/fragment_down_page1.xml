<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <TextView
        android:id="@+id/tv_disease_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" />
    
    <com.qjs.bridgedb.disease.subfragment.FlowRadioGroup 
        android:id="@+id/rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp" >
        
        <RadioButton
           android:id="@+id/rbtn_voids_pits"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/voids_pits" />

        <RadioButton
           android:id="@+id/rbtn_leakage_tendon"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/leakage_tendon" />

        <RadioButton
           android:id="@+id/rbtn_cavitation"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/cavitation" />

        <RadioButton
           android:id="@+id/rbtn_masonry_defects"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/masonry_defects" />
        
        <RadioButton
           android:id="@+id/rbtn_fissure"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/fissure" />
       
        <RadioButton
           android:id="@+id/rbtn_other_disease"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/other_disease" />
        
        <Spinner
	        android:id="@+id/sp_other_disease"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:visibility="gone"
			android:entries="@array/pier_evaluate" />
      
    </com.qjs.bridgedb.disease.subfragment.FlowRadioGroup>
    
    <RadioGroup 
        android:id="@+id/rg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
		android:layout_marginLeft="20dp"
		android:layout_marginTop="10dp" >
        
        <RadioButton
           android:id="@+id/rbtn_fissure1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/vertical_fissure" />

        <RadioButton
           android:id="@+id/rbtn_fissure2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/slant_fissure" />

        <RadioButton
           android:id="@+id/rbtn_fissure3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/standard_fissure" />
       
        <RadioButton
           android:id="@+id/rbtn_fissure4"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/net_fissure" />
      
    </RadioGroup>
    
    <LinearLayout
        android:id="@+id/down1_ll_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"        
        android:visibility="gone"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp" >
        
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/radio_button_font"
	        android:text="@string/dis_desc1" />
        
        <EditText
	        android:id="@+id/down1_ll1_dis_desc2"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
			android:inputType="number"
	        android:hint="@string/pls_enter" />
        
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/radio_button_font"
	        android:text="@string/dis_desc2" />
        
        <EditText
	        android:id="@+id/down1_ll1_dis_desc3"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
			android:inputType="number"
	        android:hint="@string/pls_enter" />
        
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/radio_button_font"
	        android:text="@string/dis_desc3" />
        
        <TextView
	        android:layout_width="50dp"
	        android:layout_height="wrap_content" />
        
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/radio_button_font"
	        android:text="@string/dis_desc4" />
        
        <EditText
	        android:id="@+id/down1_ll1_dis_desc4"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
			android:inputType="number"
	        android:hint="@string/pls_enter" />
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/down1_ll_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp" >
        
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/radio_button_font"
	        android:text="@string/dis_desc1" />
        
        <EditText
	        android:id="@+id/down1_ll2_dis_desc2"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
			android:inputType="number"
	        android:hint="@string/pls_enter" />
        
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/radio_button_font"
	        android:text="@string/dis_desc3" />
        
        <TextView
	        android:layout_width="50dp"
	        android:layout_height="wrap_content" />
        
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/radio_button_font"
	        android:text="@string/dis_desc5" />
        
        <EditText
	        android:id="@+id/down1_ll2_dis_desc3"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
			android:inputType="number"
	        android:hint="@string/pls_enter" />
        
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/radio_button_font"
	        android:text="@string/dis_desc6" />
        
        <EditText
	        android:id="@+id/down1_ll2_dis_desc4"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
			android:inputType="number"
	        android:hint="@string/pls_enter" />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
        
        <LinearLayout 
	        android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="3"
		    android:orientation="vertical" >
            
            <EditText
			    android:id="@+id/tv_add_content"
			    android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			    android:enabled="true"
			    android:gravity="top"
			    android:inputType="textMultiLine"
			    android:minLines="8"
			    android:maxLines="10"
			    android:scrollbars="vertical"
			    android:labelFor="@+id/tv_add_content"
			    android:background="@android:drawable/edit_text"
			    android:layout_marginLeft="20dp"
				android:layout_marginTop="10dp" >
			</EditText>
            
            <LinearLayout 
		        android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    style="?android:attr/buttonBarStyle" >
			
			    <Button   
			        android:id="@+id/btn_image"  
			        android:layout_width="0dip"
					android:layout_height="fill_parent"
					android:layout_weight="1"
			        android:text="@string/bn_disease_image"
			        android:layout_marginLeft="20dp"
			        android:layout_marginTop="10dp"
			        android:background="@drawable/btn_default_style"
			        style="?android:attr/buttonBarButtonStyle" />
			    
			    <Button 
			        android:id="@+id/btn_camera"  
			        android:layout_width="0dip"
					android:layout_height="fill_parent"
					android:layout_weight="1"
			        android:text="@string/bn_disease_camera"
			        android:layout_marginLeft="20dp"
			        android:layout_marginTop="10dp"
			        android:background="@drawable/btn_default_style"
			        style="?android:attr/buttonBarButtonStyle" />		    
		    </LinearLayout>
		    
        </LinearLayout>
		
	    <ImageView
	        android:id="@+id/iv_image"  
	        android:layout_width="0dip"
			android:layout_height="fill_parent"
			android:layout_weight="2"
			android:contentDescription="@string/disease_image"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
	        android:layout_marginTop="10dp" />
        
    </LinearLayout>
	
    <Button
	    android:id="@+id/btn_submit"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical"
	    android:text="@string/bn_submit"
	    android:background="@drawable/btn_submit_style"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="20dp"
	    android:layout_marginBottom="20dp" />
    
</LinearLayout>