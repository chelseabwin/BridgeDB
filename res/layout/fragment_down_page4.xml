<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <TextView
        android:id="@+id/tv_disease_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" />
    
    <com.qjs.bridgedb.disease.subfragment.FlowRadioGroup 
        android:id="@+id/rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginLeft="20dp" >
        
        <RadioButton
           android:id="@+id/rg1_rbtn_jam"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/jam" />

        <RadioButton
           android:id="@+id/rg1_rbtn_washing"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/washing" />

        <RadioButton
           android:id="@+id/rg1_rbtn_riverbed"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/riverbed" />
        
        <RadioButton
           android:id="@+id/rg1_rbtn_other_disease"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/other_disease" />
      
    </com.qjs.bridgedb.disease.subfragment.FlowRadioGroup>
    
    <com.qjs.bridgedb.disease.subfragment.FlowRadioGroup 
        android:id="@+id/rg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginLeft="20dp" >
        
        <RadioButton
           android:id="@+id/rg2_rbtn_damage"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/damage" />

        <RadioButton
           android:id="@+id/rg2_rbtn_transformation"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/transformation" />
        
        <RadioButton
           android:id="@+id/rg2_rbtn_other_disease"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/other_disease" />
      
    </com.qjs.bridgedb.disease.subfragment.FlowRadioGroup>
    
    <com.qjs.bridgedb.disease.subfragment.FlowRadioGroup 
        android:id="@+id/rg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginLeft="20dp" >
        
        <RadioButton
           android:id="@+id/rg3_rbtn_breakage"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/breakage" />

        <RadioButton
           android:id="@+id/rg3_rbtn_offset"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/offset" />

        <RadioButton
           android:id="@+id/rg3_bulging"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/bulging" />

        <RadioButton
           android:id="@+id/rg3_rbtn_fissure"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/fissure" />
        
        <RadioButton
           android:id="@+id/rg3_rbtn_other_disease"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/other_disease" />
      
    </com.qjs.bridgedb.disease.subfragment.FlowRadioGroup>
    
    <com.qjs.bridgedb.disease.subfragment.FlowRadioGroup 
        android:id="@+id/rg4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginLeft="20dp" >
        
        <RadioButton
           android:id="@+id/rg4_rbtn_defect"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/defect" />

        <RadioButton
           android:id="@+id/rg4_rbtn_washing"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/washing" />
        
        <RadioButton
           android:id="@+id/rg4_rbtn_other_disease"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/radio_button_font"
           android:text="@string/other_disease" />
      
    </com.qjs.bridgedb.disease.subfragment.FlowRadioGroup>
    
    <LinearLayout 
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
        
        <LinearLayout 
	        android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="3"
		    android:orientation="vertical" >
            
            <EditText
			    android:id="@+id/tv_add_content"
			    android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			    android:enabled="true"
			    android:gravity="top"
			    android:inputType="textMultiLine"
			    android:minLines="8"
			    android:maxLines="10"
			    android:scrollbars="vertical"
			    android:labelFor="@+id/tv_add_content"
			    android:background="@android:drawable/edit_text"
			    android:layout_marginLeft="20dp"
				android:layout_marginTop="10dp" >
			</EditText>
            
            <LinearLayout 
		        android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    style="?android:attr/buttonBarStyle" >
			
			    <Button   
			        android:id="@+id/btn_image"  
			        android:layout_width="0dip"
					android:layout_height="fill_parent"
					android:layout_weight="1"
			        android:text="@string/bn_disease_image"
			        android:layout_marginLeft="20dp"
			        android:layout_marginTop="10dp"
			        android:background="@drawable/btn_default_style"
			        style="?android:attr/buttonBarButtonStyle" />
			    
			    <Button 
			        android:id="@+id/btn_camera"  
			        android:layout_width="0dip"
					android:layout_height="fill_parent"
					android:layout_weight="1"
			        android:text="@string/bn_disease_camera"
			        android:layout_marginLeft="20dp"
			        android:layout_marginTop="10dp"
			        android:background="@drawable/btn_default_style"
			        style="?android:attr/buttonBarButtonStyle" />		    
		    </LinearLayout>
		    
        </LinearLayout>
		
	    <ImageView
	        android:id="@+id/iv_image"  
	        android:layout_width="0dip"
			android:layout_height="fill_parent"
			android:layout_weight="2"
			android:contentDescription="@string/disease_image"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
	        android:layout_marginTop="10dp" />
        
    </LinearLayout>
	
    <Button
	    android:id="@+id/btn_submit"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical"
	    android:text="@string/bn_submit"
	    android:background="@drawable/btn_submit_style"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="20dp"
	    android:layout_marginBottom="20dp" />
    
</LinearLayout>